<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.niwesh.walmartapplication.SpinnerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spinner_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beauty Category"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/select_from_spinner"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select from the Following"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_light"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/beauty_array">

        </Spinner>

    </LinearLayout>

</RelativeLayout>
