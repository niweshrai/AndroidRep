<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.niwesh.walmartapplication.MenuActivity">


        <android.support.design.widget.TabLayout
            android:id="@+id/menu_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style="@style/MyTabLayout"
            android:background="#2196F3"
            app:tabTextColor="@android:color/white">

            <android.support.design.widget.TabItem
                android:id="@+id/menu_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food"/>

            <android.support.design.widget.TabItem
                android:id="@+id/menu_clothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clothing"
                android:textColor="@android:color/white"/>

            <android.support.design.widget.TabItem
                android:id="@+id/menu_beauty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beauty"
                android:textColor="@android:color/white"/>

            <android.support.design.widget.TabItem
                android:id="@+id/menu_electronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electronics"
                android:textColor="@android:color/white"/>

            <android.support.design.widget.TabItem
                android:id="@+id/menu_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MenuOld"/>

            <android.support.design.widget.TabItem
                android:id="@+id/menu_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"/>

        </android.support.design.widget.TabLayout>

</LinearLayout>
